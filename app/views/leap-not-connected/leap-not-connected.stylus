.leap-not-connected
  position absolute
  width 100%
  height 100%
  background -webkit-radial-gradient(center center, circle cover, #f8faf8, #e8eae8)

  .leap-graphic
    width 1232px
    height 442px
    margin 10% auto 20px
    background url(static/images/plug-in-device.png)

  .skip-button
    cursor pointer
    text-decoration underline
    font-size 24px
    width 100px
    margin 0 auto

    &:hover
      color #888

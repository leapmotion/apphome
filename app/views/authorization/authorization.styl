.authorization
  background -webkit-radial-gradient(center center, circle cover, #f8faf8, #e8eae8)
  height 100%
  width 100%
  position absolute
  top 0
  left 0
  z-index 250

  .first-run-background
    background url(static/images/create-account-bg.png)
    background-repeat no-repeat
    background-size contain
    height 434px
    position relative
    max-width 1184px
    visibility hidden
    width 100%

    .label
      position absolute
      color gray
      font-size 18px

      &.top
        top -2px

      &.left
        width 215px
        left 140px

      &.bottom
        top 82px

      &.right
        left 920px
        width 250px

  &.first-run .first-run-background
    visibility visible

  iframe.oauth, .no-internet, .leap-logo-box
    background white
    border 1px solid #ddd
    border-radius 8px
    box-shadow 1px 1px 6px rgba(0, 0, 0, 0.2)
    height 498px
    margin 0
    margin-top -2%
    position absolute
    overflow hidden
    width 422px


  .waiting
    height 300px
    position absolute
    width 402px

    .leap-logo-box
      margin-top 0
      border-color white
      height 96px
      padding 50px 0
      position static

      .leap-logo
        background url(static/images/leap-logo.png)
        display block
        height 96px
        margin 0 auto
        width 200px

    .spinner-holder
      margin-top 72px

    .message
      color #999
      display none
      font-size 20px
      font-style italic
      margin-top 110px
      text-align center

    &.before
      .message.before
        display block

    &.after
      .message.after
        display block

    &.logout
      .message.logout
        display block

  .no-internet
    background -webkit-radial-gradient(center center, circle cover, #f0f0f0, #fdfdfd)
    color #444
    height 270px
    padding 20px
    text-align center

    h2
      border-bottom 1px solid #e8e8e8
      font-size 32px
      font-weight normal
      margin 10px 20px 0
      padding-bottom 10px

    .icon
      background url(static/images/wifi-icon.png)
      height 82px
      margin 30px auto
      width 82px

    .instruction
      font-size 20px
      margin 0 50px

  .background
    left: -1000px !important
    top: -1000px !important

.authorization
  background -webkit-radial-gradient(center center, circle cover, #f8faf8, #e8eae8)
  height 100%
  width 100%
  position absolute
  top 0
  left 0
  z-index 250

  &.first-run
    background none
    height auto
    width auto
    position relative
    top auto
    left auto

  iframe.oauth, .no-internet, .leap-logo-box
    background rgba(0, 0, 0, 0.3)
    border-radius 8px
    border none
    box-shadow 0px 0px 50px rgba(0, 0, 0, 0.5)
    height 498px
    margin 0
    overflow hidden
    width 422px


  .waiting
    height 300px
    position absolute
    width 402px

    .leap-logo-box
      margin-top 0
      border-color white
      height 96px
      padding 50px 0
      position static

      .leap-logo
        background url(static/images/leap-logo.png)
        display block
        height 96px
        margin 0 auto
        width 200px

    .spinner-holder
      margin-top 72px

    .message
      color #999
      display none
      font-size 20px
      font-style italic
      margin-top 110px
      text-align center

    &.before
      .message.before
        display block

    &.after
      .message.after
        display block

    &.logout
      .message.logout
        display block

  .no-internet
    background -webkit-radial-gradient(center center, circle cover, #f0f0f0, #fdfdfd)
    color #444
    height 270px
    padding 20px
    text-align center

    h2
      border-bottom 1px solid #e8e8e8
      font-size 32px
      font-weight normal
      margin 10px 20px 0
      padding-bottom 10px

    .icon
      background url(static/images/wifi-icon.png)
      height 82px
      margin 30px auto
      width 82px

    .instruction
      font-size 20px
      margin 0 50px

.authorization
  width 100%
  height 100%
  background -webkit-radial-gradient(center center, circle cover, #eee, #ddd)

  iframe.oauth
    position absolute
    z-index 2000
    width 400px
    height 300px
    margin 0
    border 1px solid #ddd
    border-radius 8px
    box-shadow 1px 1px 6px rgba(0, 0, 0, 0.2)
    background white

    &.background
      top: -1000px !important
      left: -1000px !important

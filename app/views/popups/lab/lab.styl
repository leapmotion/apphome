.instructions
  margin-bottom 30px

form
  width 400px
  margin 0 auto

  .checkbox
    padding 5px 0
    margin-bottom 5px
    vertical-align middle

    input
      margin-right 5px

#submit
  margin-top 30px

  .saved
    float right
    margin-right 10px
    line-height 28px
    display none

  input[type="submit"]
    float right
    background-image linear-gradient(top, rgba(207, 211, 214, 0.32) 0%, rgba(131, 134, 138, 0.23) 100%)
    background-image -webkit-linear-gradient(top, rgba(207, 211, 214, 0.32) 0%, rgba(131, 134, 138, 0.23) 100%)
    padding 5px 10px 7px
    border-radius 7px
    border 0
    color #fff
    cursor pointer
    font-size 16px
    text-shadow 0 -1px 0 rgba(0,0,0,.3)
    outline none

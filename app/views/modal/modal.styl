$borderColor = #3a3e48

.modal-wrapper
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.65)
  z-index 100

  .modal
    background #0b0c0e
    border 2px solid $borderColor
    border-radius 10px
    box-shadow 0 0 15px rgba(0,0,0,.65)
    color white
    margin 0 auto
    padding 24px
    position relative
    top 10%
    width 600px
    z-index 3000

    .header
      border-bottom 1px solid $borderColor
      height 80px

      h1.name
        float left

    .content
      height 300px
      overflow-y auto
      margin 20px 0

    .footer
      border-top 1px solid $borderColor
      padding-top 24px
      overflow auto

      .button
        border-radius 7px
        color #ededed
        cursor pointer
        font-size 21px
        font-weight bold
        padding 12px 21px 16px
        text-shadow 0 -1px 0 rgba(0,0,0,.55)

        &.cancel
          float left
          background-image: -webkit-linear-gradient(top, rgba(207, 211, 214, 0.32) 0%, rgba(131, 134, 138, 0.23) 100%);
          background-image linear-gradient(top, rgba(207, 211, 214, 0.32) 0%, rgba(131, 134, 138, 0.23) 100%);
          padding-left 40px
          padding-right 40px
